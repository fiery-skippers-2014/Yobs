<h1><%= @category.name %></h1>


<div id="container">
	<%@category.jobs.each do |job|%>
		<div class="job-box" id="job-<%=job.id%>">
			<div class="job-heading"><%=job.heading%></div>
			<div class="job-desc">
				<%= get_short_desc(job) %>
				<span class="long-desc">
					<%= get_long_desc(job) %>
				</span>
			</div>
			<div class="job-footer">
				<div class="more-btn">
					<%= link_to "Read more...", "#" %>
				</div>
				<div class="request-btn">
					<%= form_tag interests_path do%>
						<input type="hidden" name="job_id" value="<%=job.id%>">
						<input type="hidden" name="user_id" value="<%=current_user.id%>">
				      <p> <%= submit_tag "Request Info" %> </p>
				    <%end%>
				</div>
			</div>
		</div>
		<br><br>
	<%end%>
</div>

