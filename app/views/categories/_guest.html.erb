<div id="container">
  <%@jobs.each do |job|%>

    <div class="col-md-12 job-box" id="job-<%=job.id%>">
      <div class="job-heading panel-heading">
        <h5><%=job.heading + " @ " + job.agency.name %></h5>
      </div>
      <div class="job-desc">
        <%= get_short_desc(job) %>
        <span class="long-desc">
          <%= get_long_desc(job) %><br>
            Location: <%= job.location %><br>
            Start Date: <%= job.date %>
        </span>
      </div>

      <div class="job-footer btn-group btn-group-justified">
        <div class="btn-group">
          <button class ="more-btn btn-default btn">See More...</button>
        </div>
        <div class="btn-group">
            <button class ="btn job-<%=job.id%> btn-default apply-btn ">Send Me Info</button>
        </div>
      </div>
    </div>
  <%end%>

</div>





