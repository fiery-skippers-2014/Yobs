<div id="container">
  <%@category.jobs.each do |job|%>
      <div class="job-box" id="job-<%=job.id%>">
      <div class="job-heading"><%=job.heading%></div>
      <div class="job-desc">
        <%= get_short_desc(job) %>
        <span class="long-desc">
          <%= get_long_desc(job) %>
        </span>
      </div>

      <div class="job-footer">
        <div class="more-btn">
          <%= link_to "Read more...", "#" %>
        </div>
          <button class ="guest_interest-btn job-<%=job.id%> ">Get Application</button>
      </div>

    </div>
    <br><br>
  <%end%>

</div>


