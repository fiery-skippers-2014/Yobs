<!-- views/users/show.html.erb -->
<div class="container">
<div class='user-profile-info'>
  <div>
    <div id='welcome'><b>Welcome, </b><%= @user.user_name%></div>
  </div><p></p>
  <div>
    <div>First Name: <%= @user.first_name%></div>
    <div>Last Name: <%= @user.last_name%></div>
    <div>Phone Number: <%= @user.phone%></div>
    <div>Email: <%= @user.email%></div>
  </div>
</div>

<% if youth?(@user) %>

  <%if @jobs.length == 0%>
    <h3>No Job Requests</h3>
  <%elsif @jobs.length == 1%>
    <h3>Your <%=@jobs.length%> Job Request</h3>
  <%else%>
    <h3>Your <%=@jobs.length%> Job Requests</h3>
  <%end%>
  <div id="container">
    <div class="row">
    <%@jobs.each do |job|%>
        <div class="job-box job-box-response col-lg-5 col-md-5 col-sm-10 col-xs-10" id="job-<%=job.id%>">
        <div class="job-heading"><%=job.heading%></div>
        <div class="job-desc">
  		<p><%=job.description%></p>
        </div>

      <div class="job-footer">
        <%created = Interest.find_by_user_id_and_job_id(@user.id, job.id).created_at%>
        <p>Applied <%=((Time.now - created)/86400).round%> days ago |
          <button class ="guest_cancel-btn job-<%=job.id%> btn-facebook">Cancel</button></p>
      </div>
    </div>
    
  <%end%>

<% end %>

</div>

</div>
</div>
